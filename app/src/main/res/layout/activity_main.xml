<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffdfeaf1">

    <TextView android:text="@string/my_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center|center_horizontal"
        android:textSize="24sp"
        android:textColor="#ff4f639e" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/media_streamer"
        android:id="@+id/button"
        android:background="#F08C35"
        android:clickable="true"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:enabled="true"
        android:width="220dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_marginTop="36dp"
        android:onClick="launchMediaStreamer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/super_duo1"
        android:id="@+id/button1"
        android:layout_marginTop="12dp"
        android:background="#F08C35"
        android:clickable="true"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:enabled="true"
        android:width="220dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:onClick="launchScores" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/super_duo2"
        android:id="@+id/button2"
        android:background="#F08C35"
        android:clickable="true"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:enabled="true"
        android:width="220dp"
        android:layout_below="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_marginTop="12dp"
        android:onClick="launchLibrary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ant_terminator"
        android:id="@+id/button3"
        android:layout_marginTop="12dp"
        android:background="#F08C35"
        android:clickable="true"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:enabled="true"
        android:width="220sp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:onClick="launchBIB" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/materialize"
        android:id="@+id/button4"
        android:layout_marginTop="12dp"
        android:background="#F08C35"
        android:clickable="true"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:enabled="true"
        android:width="220dp"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:onClick="launchBacon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capstone"
        android:id="@+id/button5"
        android:background="#d3b61c3b"
        android:clickable="true"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:enabled="true"
        android:width="220dp"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="12dp"
        android:onClick="launchCapstone" />

</RelativeLayout>
